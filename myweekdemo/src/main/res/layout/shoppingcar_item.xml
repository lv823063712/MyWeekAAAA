<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ShoppingCar_CheckBox"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/checkbox_style"
            android:button="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ShoppingCar_head"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ShoppingCar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正宗迪奥香水迪奥香水正宗迪奥香水正宗迪奥..."
                    android:textColor="#666"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/ShoppingCar_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="18dp"
                        android:text="¥999"
                        android:textColor="#f00" />

                    <!--<soexample.bigfly.com.e_shop.user_defined.AddAndSubtractView
                        android:id="@+id/Myjiajian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="0dp"></soexample.bigfly.com.e_shop.user_defined.AddAndSubtractView>-->
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/My_Shopping_Delete"
        android:layout_width="33dp"
        android:layout_height="match_parent"
        android:background="#ff7300"
        android:text="删除" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>